@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto text-center mb-5 section-heading">
                <h2 class="mt-3 mb-5">All Pizza</h2>
            </div>
        </div>
        <div class="row">

            @foreach (var item in Model.Products)
            {

                <div class="col-md-6 col-lg-4   mb-5">
                    <div class="card" style="width:300px">
                        <img class="card-img-top" src="~/Images/" style="height:200px; width:300px" alt="Card image cap">
                        <div class="card-body">
                            <h2 class=" mt-1 mb-1 text-center card-title">  @item.ProductName</h2>
                            @foreach (var type in Model.Categories)
                            {
                                if (item.CategoryId == type.CategoryId)
                                {
                                    <p class="card-text">Type: @type.CategoryName</p>
                                    <p class="card-text">Description: @type.Description</p>
                                }
                            }

                            <p class="card-text">Price: @item.UnitPrice đ / 1</p>
                            <a href="/Booking/Shopping" class="btn btn-primary">Add to cart</a>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

